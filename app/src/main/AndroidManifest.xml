<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cet191.soundstageapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DecibelsActivity"
            android:label="@string/title_activity_decibels"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LumensActivity"
            android:label="@string/title_activity_lumens"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LumensandDecibelsActivity"
            android:label="@string/title_activity_lumensand_decibels"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".decibelGraph"
            android:label="@string/title_activity_decibel_graph"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
