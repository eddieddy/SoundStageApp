    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.cet191.soundstageapp.Speedometer
                android:id="@+id/Lumensmeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:markWidth="50"
                custom:maxSpeed="100"
                custom:onLowColor="@color/white"
                custom:readingTextSize="16dp"
                custom:scaleTextSize="16dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/bulb_rounded" />

